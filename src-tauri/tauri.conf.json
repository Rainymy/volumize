{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "volumize",
    "version": "0.1.0",
    "identifier": "com.volumize.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "volumize",
                "visible": true,
                "resizable": true,
                "decorations": true,
                "width": 800,
                "height": 600,
                "devtools": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "android": {
            "minSdkVersion": 28
        },
        "iOS": {
            "minimumSystemVersion": "13.0"
        },
        "targets": ["msi", "deb"],
        "icon": [
            "./icons/icon.ico",
            "./icons/icon_32x32.ico",
            "./icons/icon_64x64.ico",
            "./icons/icon_128x128.ico",
            "./icons/icon_128x128@2x.ico",
            "./icons/icon.png"
        ]
    }
}
